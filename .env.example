# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone API Key (required)
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone Environment - full URL to your index (required)
# Example: https://yourindex-abc123.svc.environment.pinecone.io
PINECONE_ENVIRONMENT=your_pinecone_index_url_here

# LlamaParse API Key (optional)
# LLAMAPARSE_API_KEY=your_llamaparse_api_key_here

# Flask configuration (for web app)
FLASK_APP=app.py
FLASK_ENV=production
